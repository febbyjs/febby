{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "callback-return": [2, ["callback", "cb", "next", "done", "proceed"]],
        "camelcase": [1, {
            "properties": "always"
        }],
        "no-duplicate-case": [2],
        "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
        "no-return-assign": [2, "always"]
    }
}
